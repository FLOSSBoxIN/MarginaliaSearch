<h1>Actor State Graph</h1>
<table id="state-graph">
    <tr>
        <th>State</th>
        <th>Transitions</th>
        <th>Description</th>
    </tr>

    {{#each state-graph.states}}
    <tr {{#if current}}class="current-state"{{/if}}>
        <td>{{name}}</td>
        <td>{{#each transitions}} {{.}} {{/each}}</td>
        <td>{{description}}</td>
    </tr>
    {{/each}}
</table>
